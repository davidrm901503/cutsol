{% extends 'layouts/dashboard.html.twig' %}

 {% block title %}Corte{% endblock %}
 {% block left_sidebar %}
     {{ include('partials/left_sidebar_acero.html.twig') }}
 {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Espesor <br> (mm)</th>
                        <th>Velocidad Corte <br>(mm|min)</th>
                        <th>Tiempo Pinchazo <br>(seg)</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for corte in cortes %}
                        <tr>
                            <td class="text-center">{{ corte.espesor }}</td>
                            <td>{{ corte.velCorte }}</td>
                            <td>{{ corte.tPinchazo }}</td>
                            <td>
                                <a href="{{ path('corte_show', {'id': corte.id}) }}">show</a>
                                <a href="{{ path('corte_edit', {'id': corte.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('corte_new') }}">Agregar nuevo</a>
            </div>
        </div>
    </div>
{% endblock %}
